@model IEnumerable<ChainStoreSalesManagement.Domain.Entities.Product>
@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<style>
    .page-header {
        padding: 0;
        margin-bottom: 20px;
    }
    
    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin: 0;
    }
    
    .tabs-container {
        border-bottom: 1px solid #e9ecef;
        margin-bottom: 20px;
    }
    
    .nav-tabs {
        border-bottom: none;
    }
    
    .nav-tabs .nav-link {
        border: none;
        color: #666;
        padding: 12px 0;
        margin-right: 30px;
        background: transparent;
        border-bottom: 2px solid transparent;
    }
    
    .nav-tabs .nav-link.active {
        color: #007bff;
        border-bottom: 2px solid #007bff;
        background: transparent;
    }
    
    .search-section {
        background: white;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #e9ecef;
    }
    
    .search-row {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
    }
    
    .search-input {
        flex: 1;
        max-width: 300px;
        padding: 8px 12px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        font-size: 14px;
    }
    
    .filter-select {
        min-width: 150px;
        padding: 8px 12px;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        font-size: 14px;
    }
    
    .btn-search {
        padding: 8px 16px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 6px;
    }
    
    .btn-search:hover {
        background: #0056b3;
    }
    
    .btn-add {
        background: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-add:hover {
        background: #0056b3;
        color: white;
        text-decoration: none;
    }
    
    .table-container {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }
    
    .table {
        margin: 0;
    }
    
    .table thead th {
        background: #f8f9fa;
        border: none;
        color: #495057;
        font-weight: 600;
        padding: 15px;
        border-bottom: 1px solid #dee2e6;
    }
    
    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f3f4;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .product-icon {
        width: 40px;
        height: 40px;
        background: #f1f3f4;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 16px;
    }
    
    .product-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .product-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
        margin: 0;
        line-height: 1.4;
    }
    
    .product-name a {
        color: inherit;
        text-decoration: none;
    }
    
    .product-name a:hover {
        color: #007bff;
        text-decoration: none;
    }
    
    .product-code {
        font-size: 12px;
        color: #6c757d;
        margin-top: 2px;
    }
    
    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: white;
        border-top: 1px solid #e9ecef;
    }
    
    .pagination-info {
        color: #6c757d;
        font-size: 14px;
    }
    
    .pagination {
        margin: 0;
    }
    
    .page-link {
        color: #007bff;
        border: 1px solid #dee2e6;
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 4px;
        text-decoration: none;
    }
    
    .page-link:hover {
        background: #e9ecef;
        text-decoration: none;
    }
    
    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
    
    .page-item.disabled .page-link {
        color: #6c757d;
        background: #fff;
        border-color: #dee2e6;
    }
    
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }
    
    .empty-icon {
        font-size: 64px;
        color: #e9ecef;
        margin-bottom: 20px;
    }
    
    .empty-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }
    
    .empty-text {
        color: #6c757d;
        margin-bottom: 20px;
    }
    
    .alert {
        border: none;
        border-radius: 6px;
        padding: 12px 16px;
        margin-bottom: 20px;
    }
    
    .alert-success {
        background: #d4edda;
        color: #155724;
    }
    
    .alert-danger {
        background: #f8d7da;
        color: #721c24;
    }
    
    .btn-close {
        background: none;
        border: none;
        font-size: 18px;
        opacity: 0.5;
    }
</style>

<!-- Header -->
<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="page-title">Sản phẩm</h1>
        <a href="@Url.Action("Create")" class="btn-add">
            <i class="fas fa-plus"></i>
            Thêm sản phẩm
        </a>
    </div>
</div>

<!-- Tabs -->
<div class="tabs-container">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#">Tất cả</a>
        </li>
    </ul>
</div>

<!-- Search Section -->
<div class="search-section">
    <form method="get" class="search-row">
        <input type="text" name="keyword" 
               value="@(ViewBag.Keyword ?? "")" 
               placeholder="Tìm kiếm sản phẩm"
               class="search-input">
        
        @Html.DropDownList("shopId", ViewBag.Shops as SelectList, "Tất cả cửa hàng", new { @class = "filter-select" })
        @Html.DropDownList("categoryId", ViewBag.Categories as SelectList, "Tất cả danh mục", new { @class = "filter-select" })
        @Html.DropDownList("brandId", ViewBag.Brands as SelectList, "Tất cả thương hiệu", new { @class = "filter-select" })
        
        <select name="canSell" class="filter-select">
            <option value="">Tất cả trạng thái</option>
            @if (ViewBag.CanSell?.ToString() == "True")
            {
                <option value="true" selected>Cho phép bán</option>
                <option value="false">Ngừng bán</option>
            }
            else if (ViewBag.CanSell?.ToString() == "False")
            {
                <option value="true">Cho phép bán</option>
                <option value="false" selected>Ngừng bán</option>
            }
            else
            {
                <option value="true">Cho phép bán</option>
                <option value="false">Ngừng bán</option>
            }
        </select>
        
        <button type="submit" class="btn-search">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<!-- Content -->
@if (Model != null && Model.Any())
{
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th><input type="checkbox" class="form-check-input"></th>
                    <th>Sản phẩm</th>
                    <th>Cửa hàng</th>
                    <th>Danh mục</th>
                    <th>Thương hiệu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" class="form-check-input" value="@item.ProductId">
                        </td>
                        <td>
                            <div class="product-info">
                                <div class="product-icon">
                                    @if (item.Images != null && item.Images.Any() && !string.IsNullOrEmpty(item.Images.First().FilePath))
                                    {
                                        <img src="@item.Images.First().FilePath" alt="@item.Name" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-box"></i>
                                    }
                                </div>
                                <div>
                                    <div class="product-name">
                                        <a href="@Url.Action("Edit", new { id = item.ProductId })">@item.Name</a>
                                    </div>
                                    <div class="product-code">@item.Code</div>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <small style="color: #6c757d; font-size: 12px;">@item.Description.Substring(0, Math.Min(50, item.Description.Length))@(item.Description.Length > 50 ? "..." : "")</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>@(item.Shop?.Name ?? "Chưa có")</td>
                        <td>@(item.Category?.Name ?? "Chưa phân loại")</td>
                        <td>@(item.Brand?.Name ?? "Chưa có")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <div class="empty-icon">
            <i class="fas fa-box"></i>
        </div>
        <div class="empty-title">Chưa có sản phẩm nào</div>
        <div class="empty-text">
            @if (!string.IsNullOrEmpty(ViewBag.Keyword as string))
            {
                <text>Không tìm thấy sản phẩm nào phù hợp với từ khóa "<strong>@ViewBag.Keyword</strong>".</text>
            }
            else
            {
                <text>Thêm mới sản phẩm đầu tiên để bắt đầu quản lý.</text>
            }
        </div>
        <div style="display: flex; gap: 15px; justify-content: center;">
            <a href="@Url.Action("Create")" class="btn-add">
                <i class="fas fa-plus"></i>
                Thêm sản phẩm
            </a>
        </div>
    </div>
}
