@model ChainStoreSalesManagement.Domain.Entities.Brand
@{
    ViewData["Title"] = "Xóa thương hiệu";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<style>
    .page-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }
    
    .btn-back {
        background: none;
        border: 1px solid #dee2e6;
        padding: 8px 12px;
        border-radius: 4px;
        color: #6c757d;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
    }
    
    .btn-back:hover {
        background: #f8f9fa;
        color: #6c757d;
        text-decoration: none;
    }
    
    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #dc3545;
        margin: 0;
    }
    
    .warning-card {
        background: white;
        border-radius: 8px;
        padding: 30px;
        border: 1px solid #e9ecef;
        margin-bottom: 20px;
        text-align: center;
        border-left: 4px solid #dc3545;
    }
    
    .warning-icon {
        font-size: 48px;
        color: #dc3545;
        margin-bottom: 20px;
    }
    
    .warning-title {
        font-size: 20px;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
    }
    
    .warning-message {
        color: #6c757d;
        margin-bottom: 25px;
        line-height: 1.5;
    }
    
    .info-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        border: 1px solid #e9ecef;
        margin-bottom: 20px;
    }
    
    .card-header {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
        padding-bottom: 10px;
        border-bottom: 1px solid #e9ecef;
    }
    
    .info-row {
        display: flex;
        margin-bottom: 15px;
        align-items: flex-start;
    }
    
    .info-label {
        font-weight: 500;
        color: #6c757d;
        width: 120px;
        flex-shrink: 0;
        font-size: 14px;
    }
    
    .info-value {
        color: #333;
        flex: 1;
        font-size: 14px;
    }
    
    .brand-name {
        font-weight: 600;
        color: #333;
    }
    
    .shop-name {
        color: #6c757d;
    }
    
    .product-count {
        background: #e9ecef;
        color: #495057;
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 500;
        display: inline-block;
    }
    
    .product-count.has-products {
        background: #f8d7da;
        color: #721c24;
    }
    
    .form-actions {
        background: white;
        border-radius: 8px;
        padding: 20px;
        border: 1px solid #e9ecef;
        display: flex;
        justify-content: center;
        gap: 15px;
    }
    
    .btn-cancel {
        background: none;
        border: 1px solid #dee2e6;
        padding: 10px 25px;
        border-radius: 4px;
        color: #6c757d;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
    }
    
    .btn-cancel:hover {
        background: #f8f9fa;
        color: #6c757d;
        text-decoration: none;
    }
    
    .btn-delete {
        background: #dc3545;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
    }
    
    .btn-delete:hover {
        background: #c82333;
    }
    
    .btn-delete:disabled {
        background: #6c757d;
        cursor: not-allowed;
        opacity: 0.65;
    }
    
    .alert {
        margin-bottom: 20px;
        padding: 12px 16px;
        border-radius: 4px;
        border: 1px solid transparent;
    }
    
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    
    .products-warning {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        color: #856404;
        padding: 15px;
        border-radius: 4px;
        margin-top: 15px;
    }
    
    .products-warning i {
        margin-right: 8px;
    }
</style>

<!-- Error Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
    </div>
}

<!-- Header -->
<div class="page-header">
    <a href="@Url.Action("Index")" class="btn-back">
        <i class="fas fa-arrow-left"></i>
    </a>
    <h1 class="page-title">Xóa thương hiệu</h1>
</div>

<!-- Warning -->
<div class="warning-card">
    <div class="warning-icon">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h3 class="warning-title">Bạn có chắc chắn muốn xóa thương hiệu này?</h3>
    <p class="warning-message">
        Hành động này không thể hoàn tác. Vui lòng kiểm tra kỹ thông tin trước khi xác nhận.
    </p>
</div>

<!-- Brand Info -->
<div class="info-card">
    <div class="card-header">Thông tin thương hiệu sẽ bị xóa</div>
    
    <div class="info-row">
        <span class="info-label">Tên thương hiệu:</span>
        <span class="info-value brand-name">@Model.Name</span>
    </div>
    
    <div class="info-row">
        <span class="info-label">Cửa hàng:</span>
        <span class="info-value shop-name">@Model.Shop.Name</span>
    </div>
    
    <div class="info-row">
        <span class="info-label">Số sản phẩm:</span>
        <span class="info-value">
            <span class="product-count @(Model.Products.Any() ? "has-products" : "")">
                @Model.Products.Count sản phẩm
            </span>
        </span>
    </div>
    
    @if (Model.Products.Any())
    {
        <div class="products-warning">
            <i class="fas fa-exclamation-circle"></i>
            <strong>Cảnh báo:</strong> Thương hiệu này có @Model.Products.Count sản phẩm đang sử dụng. 
            Bạn cần phải xóa hoặc chuyển các sản phẩm này sang thương hiệu khác trước khi có thể xóa thương hiệu.
        </div>
    }
</div>

<!-- Actions -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BrandId" />
    <div class="form-actions">
        <a href="@Url.Action("Index")" class="btn-cancel">
            <i class="fas fa-times"></i> Hủy
        </a>
        <button type="submit" class="btn-delete" @(Model.Products.Any() ? "disabled" : "")>
            <i class="fas fa-trash"></i> 
            @if (Model.Products.Any())
            {
                <text>Không thể xóa</text>
            }
            else
            {
                <text>Xác nhận xóa</text>
            }
        </button>
    </div>
</form>
