@model ChainStoreSalesManagement.Domain.Entities.Branch

@{
    ViewData["Title"] = "Chi tiết chi nhánh";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 1080px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">
                    <i class="fas fa-store-alt me-2"></i>
                    Chi tiết chi nhánh
                </h2>
                <p class="text-muted mb-0">Thông tin chi tiết của chi nhánh</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Edit" asp-route-id="@Model.BranchId" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i>Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Branch Information -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin cơ bản</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Mã chi nhánh:</td>
                                    <td>
                                        <span class="badge bg-primary">@Model.Code</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Tên chi nhánh:</td>
                                    <td><strong>@Model.Name</strong></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Cửa hàng:</td>
                                    <td>
                                        <span class="badge bg-info">@Model.Shop?.Name</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Địa chỉ:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Address))
                                        {
                                            <i class="fas fa-map-marker-alt me-1 text-primary"></i>
                                            @Model.Address
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa cập nhật</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Số điện thoại:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Phone))
                                        {
                                            <a href="tel:@Model.Phone" class="text-decoration-none">
                                                <i class="fas fa-phone me-1 text-success"></i>
                                                @Model.Phone
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Mã số thuế:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.TaxCode))
                                        {
                                            <span class="badge bg-secondary">@Model.TaxCode</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Trạng thái:</td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause-circle me-1"></i>Không hoạt động
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Ngày tạo:</td>
                                    <td>
                                        <i class="fas fa-calendar me-1 text-info"></i>
                                        @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    @if (Model.ModifiedAt.HasValue)
                    {
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-edit me-1"></i>
                                Cập nhật lần cuối: @Model.ModifiedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    }
                </div>
            </div>

            <!-- Statistics -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">Thống kê hoạt động</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="border rounded p-3 text-center">
                                <i class="fas fa-users-cog fa-2x text-primary mb-2"></i>
                                <h4 class="mb-1">@ViewBag.EmployeeCount</h4>
                                <small class="text-muted">Nhân viên</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3 text-center">
                                <i class="fas fa-shopping-cart fa-2x text-success mb-2"></i>
                                <h4 class="mb-1">@ViewBag.OrderCount</h4>
                                <small class="text-muted">Đơn hàng</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3 text-center">
                                <i class="fas fa-boxes fa-2x text-warning mb-2"></i>
                                <h4 class="mb-1">-</h4>
                                <small class="text-muted">Sản phẩm trong kho</small>
                            </div>
                        </div>
                    </div>
                    
                    @if (ViewBag.EmployeeCount == 0 && ViewBag.OrderCount == 0)
                    {
                        <div class="text-center py-3 mt-3">
                            <i class="fas fa-chart-line fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">Chi nhánh chưa có hoạt động nào</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & Info -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Hành động nhanh</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.BranchId" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa thông tin
                        </a>
                        
                        @if (Model.IsActive)
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="toggleStatus(false)">
                                <i class="fas fa-pause me-1"></i>Tạm dừng hoạt động
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-success" onclick="toggleStatus(true)">
                                <i class="fas fa-play me-1"></i>Kích hoạt lại
                            </button>
                        }
                        
                        <a asp-action="Delete" asp-route-id="@Model.BranchId" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-1"></i>Xóa chi nhánh
                        </a>
                        
                        <hr>
                        
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-users-cog me-1"></i>Quản lý nhân viên
                        </a>
                        
                        <a href="#" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-boxes me-1"></i>Quản lý kho hàng
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin bổ sung</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-light">
                        <h6><i class="fas fa-info-circle me-1"></i>Ghi chú</h6>
                        <ul class="mb-0 ps-3">
                            <li>ID chi nhánh: <strong>#@Model.BranchId</strong></li>
                            <li>Thuộc cửa hàng: <strong>@Model.Shop?.Name</strong></li>
                            @if (ViewBag.EmployeeCount > 0 || ViewBag.OrderCount > 0)
                            {
                                <li class="text-warning">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Có dữ liệu liên quan - không thể xóa hoàn toàn
                                </li>
                            }
                        </ul>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mt-3">
                            <h6>Địa chỉ chi tiết</h6>
                            <div class="border rounded p-2 bg-light">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                @Model.Address
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(isActive) {
            const action = isActive ? 'kích hoạt' : 'tạm dừng';
            if (confirm(`Bạn có chắc chắn muốn ${action} chi nhánh này không?`)) {
                window.location.href = '@Url.Action("Edit", "Branch", new { id = Model.BranchId })';
            }
        }
        
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .header-section h2 {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .table-borderless td {
        padding: 0.75rem;
        border: none;
        vertical-align: top;
    }
    
    .table-borderless .fw-bold {
        width: 35%;
        color: #495057;
    }
    
    .border {
        border: 1px solid #dee2e6 !important;
    }
</style>
