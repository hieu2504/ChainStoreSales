@model ChainStoreSalesManagement.Domain.Entities.Branch

@{
    ViewData["Title"] = "Xóa chi nhánh";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 1080px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0 text-danger">
                    <i class="fas fa-store-slash me-2"></i>
                    Xóa chi nhánh
                </h2>
                <p class="text-muted mb-0">Xác nhận xóa chi nhánh khỏi hệ thống</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Branch Information -->
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">Thông tin chi nhánh sẽ bị xóa</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Mã chi nhánh:</td>
                                    <td><span class="badge bg-primary">@Model.Code</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Tên chi nhánh:</td>
                                    <td><strong>@Model.Name</strong></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Cửa hàng:</td>
                                    <td><span class="badge bg-info">@Model.Shop?.Name</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Địa chỉ:</td>
                                    <td>@(Model.Address ?? "-")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Số điện thoại:</td>
                                    <td>@(Model.Phone ?? "-")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Mã số thuế:</td>
                                    <td>@(Model.TaxCode ?? "-")</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Trạng thái:</td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Không hoạt động</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Ngày tạo:</td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Impact Analysis -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Phân tích tác động</h6>
                </div>
                <div class="card-body">
                    <div class="alert @(ViewBag.HasRelatedData ? "alert-warning" : "alert-info")">
                        <h6>
                            <i class="fas @(ViewBag.HasRelatedData ? "fa-exclamation-triangle" : "fa-info-circle") me-1"></i>
                            @(ViewBag.HasRelatedData ? "Cảnh báo" : "Thông tin")
                        </h6>
                        @if (ViewBag.HasRelatedData)
                        {
                            <p class="mb-2">
                                Chi nhánh này có dữ liệu liên quan trong hệ thống.
                            </p>
                            <p class="mb-0">
                                <strong>Hành động:</strong> Chi nhánh sẽ được <strong>vô hiệu hóa</strong> 
                                thay vì xóa hoàn toàn để bảo toàn dữ liệu.
                            </p>
                        }
                        else
                        {
                            <p class="mb-0">
                                Chi nhánh này chưa có dữ liệu liên quan nào. 
                                Có thể xóa hoàn toàn khỏi hệ thống.
                            </p>
                        }
                    </div>

                    <div class="mt-3">
                        <h6>Thống kê dữ liệu liên quan:</h6>
                        <ul class="list-unstyled">
                            <li>
                                <i class="fas fa-users-cog text-primary me-2"></i>
                                Nhân viên: <strong>@ViewBag.EmployeeCount</strong>
                            </li>
                            <li>
                                <i class="fas fa-shopping-cart text-success me-2"></i>
                                Đơn hàng: <strong>@ViewBag.OrderCount</strong>
                            </li>
                            <li>
                                <i class="fas fa-boxes text-warning me-2"></i>
                                Kho hàng: <strong>@ViewBag.InventoryCount</strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Xác nhận hành động</h6>
                            <p class="text-muted mb-0">
                                @if (ViewBag.HasRelatedData)
                                {
                                    <text>Chi nhánh sẽ được vô hiệu hóa và không thể hoạt động.</text>
                                }
                                else
                                {
                                    <text>Chi nhánh sẽ được xóa hoàn toàn khỏi hệ thống.</text>
                                }
                            </p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.BranchId" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại sửa
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input asp-for="BranchId" type="hidden" />
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('@(ViewBag.HasRelatedData ? "Bạn có chắc chắn muốn vô hiệu hóa chi nhánh này không?" : "Bạn có chắc chắn muốn xóa hoàn toàn chi nhánh này không?")')">
                                    <i class="fas @(ViewBag.HasRelatedData ? "fa-ban" : "fa-trash") me-1"></i>
                                    @(ViewBag.HasRelatedData ? "Vô hiệu hóa" : "Xóa hoàn toàn")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .header-section h2 {
        color: #dc3545;
        font-weight: 600;
    }
    
    .table-borderless td {
        padding: 0.5rem 0.75rem;
        border: none;
    }
    
    .table-borderless .fw-bold {
        width: 40%;
        color: #495057;
    }
</style>
