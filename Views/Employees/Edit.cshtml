@model ChainStoreSalesManagement.Domain.Entities.Employee

@{
    ViewData["Title"] = "Sửa nhân viên";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 1080px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>
                    Sửa nhân viên
                </h2>
                <p class="text-muted mb-0">Cập nhật thông tin nhân viên</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-outline-info me-2">
                    <i class="fas fa-eye me-1"></i>Chi tiết
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <!-- Left Panel - Employee Information -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin nhân viên</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="EmployeeId" type="hidden" />
                        <input asp-for="ShopId" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        
                        <div class="row">
                            <!-- User Information (Read-only) -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Người dùng</label>
                                <div class="form-control-plaintext border rounded p-2 bg-light">
                                    <strong>@Model.User?.UserName</strong>
                                    @if (!string.IsNullOrEmpty(Model.User?.Email))
                                    {
                                        <small class="text-muted ms-2">(@Model.User.Email)</small>
                                    }
                                </div>
                                <input asp-for="UserId" type="hidden" />
                                <small class="form-text text-muted">Người dùng không thể thay đổi sau khi tạo</small>
                            </div>

                            <!-- Branch -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchId" class="form-label">Chi nhánh</label>
                                <select asp-for="BranchId" class="form-select">
                                    <option value="">-- Chọn chi nhánh --</option>
                                    @if (ViewBag.Branches != null)
                                    {
                                        @foreach (var branch in ViewBag.Branches as List<ChainStoreSalesManagement.Domain.Entities.Branch>)
                                        {
                                            if (Model.BranchId == branch.BranchId)
                                            {
                                                <option value="@branch.BranchId" selected>@branch.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@branch.BranchId">@branch.Name</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>

                            <!-- Title -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label">Chức vụ</label>
                                <input asp-for="Title" class="form-control" 
                                       placeholder="Nhân viên bán hàng, Quản lý, v.v." maxlength="100" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Hired Date -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="HiredDate" class="form-label">Ngày tuyển dụng</label>
                                <input asp-for="HiredDate" class="form-control" type="date" />
                                <span asp-validation-for="HiredDate" class="text-danger"></span>
                            </div>

                            <!-- Is Active -->
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Hoạt động
                                    </label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-danger" 
                                    onclick="deleteEmployee(@Model.EmployeeId, '@Model.User?.UserName')">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </button>
                            <div class="d-flex gap-2">
                                <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i>Cập nhật
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Panel - Statistics & Actions -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-12">
                            <div class="border rounded p-3 mb-3">
                                <i class="fas fa-shopping-cart fa-2x text-primary mb-2"></i>
                                <h4 class="mb-1">0</h4>
                                <small class="text-muted">Đơn hàng bán</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i>Thông tin</h6>
                        <ul class="mb-0 ps-3">
                            <li><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</li>
                            <li><strong>Trạng thái:</strong> 
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Không hoạt động</span>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Hành động nhanh</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-eye me-1"></i>Xem chi tiết
                        </a>
                        @if (Model.IsActive)
                        {
                            <button type="button" class="btn btn-outline-warning btn-sm" 
                                    onclick="toggleStatus(@Model.EmployeeId, false)">
                                <i class="fas fa-pause me-1"></i>Tạm dừng hoạt động
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-success btn-sm" 
                                    onclick="toggleStatus(@Model.EmployeeId, true)">
                                <i class="fas fa-play me-1"></i>Kích hoạt lại
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteEmployeeId" name="id" value="" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function deleteEmployee(employeeId, userName) {
            if (confirm(`Bạn có chắc chắn muốn xóa nhân viên "${userName}" không?\n\nLưu ý: Nếu nhân viên có dữ liệu bán hàng, sẽ được vô hiệu hóa thay vì xóa hoàn toàn.`)) {
                document.getElementById('deleteEmployeeId').value = employeeId;
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "Employees")/' + employeeId;
                form.submit();
            }
        }

        function toggleStatus(employeeId, isActive) {
            const action = isActive ? 'kích hoạt' : 'tạm dừng';
            if (confirm(`Bạn có chắc chắn muốn ${action} nhân viên này không?`)) {
                // Create a form to submit status change
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Edit", "Employees")';
                
                // Add all current form data
                const currentForm = document.querySelector('form[asp-action="Edit"]');
                const formData = new FormData(currentForm);
                
                // Update IsActive value
                formData.set('IsActive', isActive);
                
                // Add form data to new form
                for (let [key, value] of formData.entries()) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = key;
                    input.value = value;
                    form.appendChild(input);
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }
        
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .header-section h2 {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .form-label {
        font-weight: 500;
        color: #495057;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .form-control-plaintext {
        background-color: #f8f9fa !important;
    }
</style>
