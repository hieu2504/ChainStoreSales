@model ChainStoreSalesManagement.Domain.Entities.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 1080px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>
                    Chi tiết nhân viên
                </h2>
                <p class="text-muted mb-0">Thông tin chi tiết của nhân viên</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i>Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Employee Information -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin cơ bản</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Tên đăng nhập:</td>
                                    <td>
                                        <span class="badge bg-primary">@Model.User?.UserName</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Email:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.User?.Email))
                                        {
                                            <a href="mailto:@Model.User.Email" class="text-decoration-none">
                                                <i class="fas fa-envelope me-1"></i>@Model.User.Email
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Chức vụ:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Title))
                                        {
                                            <span class="badge bg-info">@Model.Title</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa phân công</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Chi nhánh:</td>
                                    <td>
                                        @if (Model.Branch != null)
                                        {
                                            <strong>@Model.Branch.Name</strong>
                                            @if (!string.IsNullOrEmpty(Model.Branch.Address))
                                            {
                                                <br><small class="text-muted">@Model.Branch.Address</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Chưa phân chi nhánh</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Ngày tuyển dụng:</td>
                                    <td>
                                        @if (Model.HiredDate.HasValue)
                                        {
                                            <i class="fas fa-calendar me-1 text-primary"></i>
                                            @Model.HiredDate.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Trạng thái:</td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause-circle me-1"></i>Không hoạt động
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Ngày tạo:</td>
                                    <td>
                                        <i class="fas fa-clock me-1 text-info"></i>
                                        @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Cửa hàng:</td>
                                    <td>
                                        <strong>@Model.Shop?.Name</strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Activity -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">Hoạt động bán hàng</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.SalesCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Nhân viên này đã xử lý <strong>@ViewBag.SalesCount đơn hàng</strong> trong hệ thống.
                        </div>
                        
                        <div class="row">
                            <div class="col-md-4">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-shopping-cart fa-2x text-primary mb-2"></i>
                                    <h4 class="mb-1">@ViewBag.SalesCount</h4>
                                    <small class="text-muted">Tổng đơn hàng</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-chart-line fa-2x text-success mb-2"></i>
                                    <h4 class="mb-1">-</h4>
                                    <small class="text-muted">Doanh số (VND)</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded p-3 text-center">
                                    <i class="fas fa-calendar-day fa-2x text-info mb-2"></i>
                                    <h4 class="mb-1">-</h4>
                                    <small class="text-muted">Đơn hàng tuần này</small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h6 class="text-muted">Chưa có hoạt động bán hàng</h6>
                            <p class="text-muted">Nhân viên này chưa xử lý đơn hàng nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quick Actions & Info -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Hành động nhanh</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa thông tin
                        </a>
                        
                        @if (Model.IsActive)
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="toggleStatus(false)">
                                <i class="fas fa-pause me-1"></i>Tạm dừng hoạt động
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-success" onclick="toggleStatus(true)">
                                <i class="fas fa-play me-1"></i>Kích hoạt lại
                            </button>
                        }
                        
                        <a asp-action="Delete" asp-route-id="@Model.EmployeeId" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-1"></i>Xóa nhân viên
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin bổ sung</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-light">
                        <h6><i class="fas fa-info-circle me-1"></i>Ghi chú</h6>
                        <ul class="mb-0 ps-3">
                            <li>ID nhân viên: <strong>#@Model.EmployeeId</strong></li>
                            <li>User ID: <strong>@Model.UserId</strong></li>
                            @if (ViewBag.SalesCount > 0)
                            {
                                <li class="text-warning">
                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                    Không thể xóa do có dữ liệu bán hàng
                                </li>
                            }
                        </ul>
                    </div>

                    @if (Model.Branch != null)
                    {
                        <div class="mt-3">
                            <h6>Thông tin chi nhánh</h6>
                            <div class="border rounded p-2">
                                <div class="fw-bold">@Model.Branch.Name</div>
                                <small class="text-muted">Mã: @Model.Branch.Code</small>
                                @if (!string.IsNullOrEmpty(Model.Branch.Address))
                                {
                                    <div class="small text-muted mt-1">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        @Model.Branch.Address
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(isActive) {
            const action = isActive ? 'kích hoạt' : 'tạm dừng';
            if (confirm(`Bạn có chắc chắn muốn ${action} nhân viên này không?`)) {
                window.location.href = '@Url.Action("Edit", "Employees", new { id = Model.EmployeeId })';
            }
        }
        
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .header-section h2 {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .table-borderless td {
        padding: 0.75rem;
        border: none;
        vertical-align: top;
    }
    
    .table-borderless .fw-bold {
        width: 35%;
        color: #495057;
    }
    
    .border {
        border: 1px solid #dee2e6 !important;
    }
</style>
