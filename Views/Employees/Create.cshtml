@model ChainStoreSalesManagement.Domain.Entities.Employee

@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 1080px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0">
                    <i class="fas fa-user-plus me-2"></i>
                    Thêm nhân viên
                </h2>
                <p class="text-muted mb-0">Thêm nhân viên mới vào hệ thống</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row">
        <!-- Left Panel - Employee Information -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Thông tin nhân viên</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <!-- User Selection -->
                            <div class="col-md-12 mb-3">
                                <label asp-for="UserId" class="form-label">
                                    Người dùng <span class="text-danger">*</span>
                                </label>
                                <select asp-for="UserId" id="userSelect" class="form-select" required>
                                    <option value="">-- Chọn người dùng --</option>
                                    @if (ViewBag.AvailableUsers != null)
                                    {
                                        var availableUsers = ViewBag.AvailableUsers as IEnumerable<dynamic>;
                                        if (availableUsers != null)
                                        {
                                            @foreach (var user in availableUsers)
                                            {
                                                <option value="@user.Id">@user.UserName (@user.Email)</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="UserId" class="text-danger"></span>
                                <small class="form-text text-muted">Chọn người dùng chưa phải là nhân viên</small>
                            </div>

                            <!-- Branch -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchId" class="form-label">Chi nhánh</label>
                                <select asp-for="BranchId" class="form-select">
                                    <option value="">-- Chọn chi nhánh --</option>
                                    @if (ViewBag.Branches != null)
                                    {
                                        var branches = ViewBag.Branches as IEnumerable<ChainStoreSalesManagement.Domain.Entities.Branch>;
                                        if (branches != null)
                                        {
                                            @foreach (var branch in branches)
                                            {
                                                <option value="@branch.BranchId">@branch.Name</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>

                            <!-- Title -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label">Chức vụ</label>
                                <input asp-for="Title" class="form-control" 
                                       placeholder="Nhân viên bán hàng, Quản lý, v.v." maxlength="100" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <!-- Hired Date -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="HiredDate" class="form-label">Ngày tuyển dụng</label>
                                <input asp-for="HiredDate" class="form-control" type="date" />
                                <span asp-validation-for="HiredDate" class="text-danger"></span>
                            </div>

                            <!-- Is Active -->
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Hoạt động
                                    </label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Panel - Instructions -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Hướng dẫn</h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-1"></i>Lưu ý quan trọng</h6>
                        <ul class="mb-0 ps-3">
                            <li>Mỗi người dùng chỉ có thể là nhân viên của một cửa hàng</li>
                            <li>Người dùng phải đã có tài khoản trong hệ thống</li>
                            <li>Chi nhánh có thể để trống nếu chưa phân công cụ thể</li>
                            <li>Nhân viên không hoạt động sẽ không thể đăng nhập vào hệ thống</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <h6>Tìm kiếm người dùng</h6>
                        <p class="small text-muted">
                            Bạn có thể tìm kiếm người dùng bằng cách gõ tên đăng nhập hoặc email. 
                            Hệ thống sẽ tự động gợi ý những người dùng phù hợp.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .header-section h2 {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .form-label {
        font-weight: 500;
        color: #495057;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    
    .select2-container--default .select2-selection--single {
        height: calc(2.25rem + 2px);
        border: 1px solid #ced4da;
    }
    
    .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: calc(2.25rem - 2px);
        padding-left: 12px;
    }
    
    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: calc(2.25rem - 2px);
    }
</style>
