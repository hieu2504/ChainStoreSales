@model ChainStoreSalesManagement.Domain.Entities.Customer

@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="container-fluid" style="max-width: 800px; margin: 0 auto;">
    <!-- Header Section -->
    <div class="header-section mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="mb-0 text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Xóa khách hàng
                </h2>
                <p class="text-muted mb-0">Xác nhận xóa khách hàng khỏi hệ thống</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Warning Card -->
    <div class="card border-warning">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Cảnh báo xóa khách hàng
            </h5>
        </div>
        <div class="card-body">
            @if (ViewBag.HasOrders == true)
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Lưu ý:</strong> Khách hàng này có đơn hàng liên quan, hệ thống sẽ <strong>lưu trữ</strong> thay vì xóa hoàn toàn.
                </div>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="fas fa-trash me-2"></i>
                    <strong>Chú ý:</strong> Khách hàng sẽ bị xóa <strong>hoàn toàn</strong> khỏi hệ thống và không thể khôi phục.
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-primary mb-3">Thông tin khách hàng</h6>
                    
                    <div class="mb-2">
                        <strong>Mã khách hàng:</strong>
                        <span class="ms-2">@Model.Code</span>
                    </div>
                    
                    <div class="mb-2">
                        <strong>Họ tên:</strong>
                        <span class="ms-2">@Model.FullName</span>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="mb-2">
                            <strong>Số điện thoại:</strong>
                            <span class="ms-2">@Model.Phone</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="mb-2">
                            <strong>Email:</strong>
                            <span class="ms-2">@Model.Email</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.TaxCode))
                    {
                        <div class="mb-2">
                            <strong>Mã số thuế:</strong>
                            <span class="ms-2 badge bg-info">@Model.TaxCode</span>
                        </div>
                    }

                    <div class="mb-2">
                        <strong>Cửa hàng:</strong>
                        <span class="ms-2">@Model.Shop?.Name</span>
                    </div>

                    <div class="mb-2">
                        <strong>Ngày tạo:</strong>
                        <span class="ms-2">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                </div>

                <div class="col-md-6">
                    <h6 class="text-primary mb-3">Thống kê liên quan</h6>
                    
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <div class="row">
                                <div class="col-6 border-end">
                                    <h4 class="text-primary mb-0">@Model.Orders.Count</h4>
                                    <small class="text-muted">Đơn hàng</small>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-success mb-0">@Model.Orders.Sum(o => o.TotalAmount).ToString("N0")</h4>
                                    <small class="text-muted">VNĐ</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Orders.Any())
                    {
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                Đơn hàng cuối: @Model.Orders.OrderByDescending(o => o.OrderDate).First().OrderDate.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Note))
            {
                <div class="mt-3">
                    <h6 class="text-primary">Ghi chú:</h6>
                    <div class="border rounded p-2 bg-light">
                        @Model.Note
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-0">
                        @if (ViewBag.HasOrders == true)
                        {
                            <p>
                                <i class="fas fa-archive text-warning me-2"></i>
                                <strong>Hành động:</strong> Khách hàng sẽ được <span class="text-warning">lưu trữ</span> và không hiển thị trong danh sách chính.
                            </p>
                        }
                        else
                        {
                            <p>
                                <i class="fas fa-trash text-danger me-2"></i>
                                <strong>Hành động:</strong> Khách hàng sẽ được <span class="text-danger">xóa hoàn toàn</span> khỏi hệ thống.
                            </p>
                        }
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <form asp-action="Delete" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="CustomerId" />
                        
                        @if (ViewBag.HasOrders == true)
                        {
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="fas fa-archive me-2"></i>Lưu trữ
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger me-2"
                                    onclick="return confirm('Bạn có chắc chắn muốn xóa hoàn toàn khách hàng @Model.FullName không? Hành động này không thể hoàn tác!')">
                                <i class="fas fa-trash me-2"></i>Xóa hoàn toàn
                            </button>
                        }
                    </form>
                    
                    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Success message display
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
}

<style>
    .card {
        border: 1px solid #e9ecef;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .card-header {
        border-bottom: 1px solid #e9ecef;
    }
    
    .header-section h2 {
        font-weight: 600;
    }
    
    .border-end {
        border-right: 1px solid #dee2e6 !important;
    }
    
    .border-warning {
        border-color: #ffc107 !important;
    }
</style>
