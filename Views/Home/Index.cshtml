@{
    ViewData["Title"] = "Tổng quan báo cáo";
    Layout = "~/Views/Shared/_LayoutSapo.cshtml";
}

<div class="page-header">
    <div class="header-left">
        <h1 class="page-title">Tổng quan báo cáo</h1>
    </div>
    <div class="header-right">
        <button class="fullscreen-toggle" onclick="showFullscreenAlert()" title="Xem toàn màn hình">
            <i class="fas fa-expand"></i>
            <span>Xem toàn màn hình</span>
        </button>
        <button class="edit-btn" onclick="showEditAlert()" title="Chỉnh sửa">
            <i class="fas fa-edit"></i>
            <span>Chỉnh sửa</span>
        </button>
    </div>
</div>

<!-- Tabs -->
<div class="page-tabs">
    <a href="#" class="tab active">Tổng quan</a>
    <a href="#" class="tab">Phân tích doanh thu</a>
    <a href="#" class="tab">Phân tích khách hàng</a>
    <a href="#" class="tab">Phân tích kinh doanh Sàn</a>
    <i class="fas fa-plus" style="color: #6c757d; margin-left: auto; cursor: pointer;"></i>
</div>

<!-- Date Filter -->
<div class="date-filter">
    <div class="date-picker">
        <i class="fas fa-calendar-alt" style="margin-right: 8px; color: #6c757d;"></i>
        30 ngày qua (27/07 - 25/08/2025)
        <i class="fas fa-chevron-down" style="margin-left: 8px; color: #6c757d;"></i>
    </div>
    <div class="date-picker">
        So với: 27/06 - 26/07/2025
        <i class="fas fa-chevron-down" style="margin-left: 8px; color: #6c757d;"></i>
    </div>
</div>

<!-- Dashboard Grid -->
<div class="dashboard-grid">
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Doanh thu thuần</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="card-value">0₫</div>
        <div class="card-subtitle">—</div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Lợi nhuận gộp</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="card-value">0₫</div>
        <div class="card-subtitle">—</div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Đơn hàng</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="card-value">0</div>
        <div class="card-subtitle">Không có dữ liệu hiển thị</div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Giá trị tồn kho</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="card-value">0₫</div>
        <div class="card-subtitle">—</div>
    </div>
</div>

<!-- Chart Cards -->
<div class="dashboard-grid">
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Doanh thu theo thời gian</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="chart-placeholder">
            <div style="text-align: center;">
                <i class="fas fa-chart-line" style="font-size: 48px; color: #e9ecef; margin-bottom: 16px; display: block;"></i>
                <div>Chưa có dữ liệu báo cáo</div>
            </div>
        </div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Giá trị đơn hàng trung bình</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="chart-placeholder">
            <div style="text-align: center;">
                <i class="fas fa-chart-bar" style="font-size: 48px; color: #e9ecef; margin-bottom: 16px; display: block;"></i>
                <div>Chưa có dữ liệu báo cáo</div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Charts -->
<div class="dashboard-grid">
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Top sản phẩm bán chạy</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="chart-placeholder">
            <div style="text-align: center;">
                <i class="fas fa-chart-pie" style="font-size: 48px; color: #e9ecef; margin-bottom: 16px; display: block;"></i>
                <div>Chưa có dữ liệu báo cáo</div>
            </div>
        </div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-header">
            <h3 class="card-title">Số lượng đơn hàng theo thời gian</h3>
            <i class="fas fa-info-circle" style="color: #6c757d;"></i>
        </div>
        <div class="chart-placeholder">
            <div style="text-align: center;">
                <i class="fas fa-chart-area" style="font-size: 48px; color: #e9ecef; margin-bottom: 16px; display: block;"></i>
                <div>Chưa có dữ liệu báo cáo</div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .header-left {
        flex: 1;
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .fullscreen-toggle {
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        padding: 8px;
        border-radius: 4px;
        transition: background 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

    .fullscreen-toggle:hover {
        background: #f8f9fa;
    }

    .edit-btn {
        background: none;
        border: 1px solid #dee2e6;
        color: #6c757d;
        padding: 8px 16px;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 14px;
    }

    .edit-btn:hover {
        background: #f8f9fa;
        border-color: #adb5bd;
    }

    .page-title {
        font-size: 24px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .page-tabs {
        display: flex;
        gap: 30px;
        border-bottom: 2px solid #f1f2f6;
        margin-bottom: 30px;
    }

    .tab {
        padding: 12px 0;
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        border-bottom: 2px solid transparent;
        transition: all 0.2s;
    }

    .tab.active {
        color: #3498db;
        border-bottom-color: #3498db;
    }

    .tab:hover {
        color: #3498db;
        text-decoration: none;
    }

    /* Date Filter */
    .date-filter {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        align-items: center;
    }

    .date-picker {
        padding: 8px 12px;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        background: white;
        cursor: pointer;
    }

    /* Dashboard Cards */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-bottom: 30px;
    }

    .dashboard-card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        border: 1px solid #f1f2f6;
    }

    .card-header {
        display: flex;
        justify-content: between;
        align-items: center;
        margin-bottom: 16px;
    }

    .card-title {
        font-size: 14px;
        color: #6c757d;
        margin: 0;
    }

    .card-value {
        font-size: 32px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .card-subtitle {
        font-size: 12px;
        color: #95a5a6;
    }

    .chart-placeholder {
        height: 200px;
        background: #f8f9fa;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 14px;
        margin-top: 20px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }
        
        .date-filter {
            flex-direction: column;
            align-items: stretch;
        }
        
        .page-tabs {
            overflow-x: auto;
            white-space: nowrap;
        }
        
        .page-header {
            flex-direction: column;
            gap: 15px;
        }
        
        .header-right {
            align-self: stretch;
            justify-content: space-between;
        }
        
        .fullscreen-toggle span,
        .edit-btn span {
            display: none;
        }
    }
</style>

<script>
    function showFullscreenAlert() {
        alert('Chức năng xem toàn màn hình sẽ được cập nhật trong phiên bản tới.');
    }
    
    function showEditAlert() {
        alert('Chức năng chỉnh sửa dashboard sẽ được cập nhật trong phiên bản tới.');
    }
</script>
