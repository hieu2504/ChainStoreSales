@model ChainStoreSalesManagement.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chain Store Management</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #6B73FF 0%, #9742DC 50%, #6B73FF 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .login-container {
            background: white;
            border-radius: 16px;
            padding: 40px 35px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 420px;
            position: relative;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .close-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 32px;
            height: 32px;
            background: none;
            border: none;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .close-btn:hover {
            background: #f5f5f5;
            color: #333;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 35px;
        }

        .logo-wrapper {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
        }

        .fpt-logo {
            width: 50px;
            height: 32px;
            background: linear-gradient(45deg, #FF6B35, #F7931E, #4CAF50, #2196F3);
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .fpt-logo::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, 
                #FF6B35 0%, 
                #F7931E 25%, 
                #4CAF50 50%, 
                #2196F3 75%, 
                #FF6B35 100%);
            z-index: -1;
        }

        .education-text {
            color: #666;
            font-size: 12px;
            font-weight: 500;
        }

        .university-name {
            color: #FF6B35;
            font-weight: bold;
            font-size: 20px;
            letter-spacing: 0.5px;
            margin-bottom: 25px;
        }

        .login-title {
            color: #333;
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-control {
            width: 100%;
            padding: 16px 18px;
            border: 2px solid #E8ECEF;
            border-radius: 12px;
            font-size: 15px;
            background-color: #FAFBFC;
            transition: all 0.3s ease;
            color: #333;
        }

        .form-control::placeholder {
            color: #9CA3AF;
            font-weight: 400;
        }

        .form-control:focus {
            outline: none;
            border-color: #6B73FF;
            background-color: white;
            box-shadow: 0 0 0 4px rgba(107, 115, 255, 0.08);
        }

        .password-field {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #9CA3AF;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
            transition: color 0.3s ease;
        }

        .password-toggle:hover {
            color: #6B73FF;
        }

        .forgot-password {
            text-align: right;
            margin-bottom: 25px;
        }

        .forgot-password a {
            color: #22C55E;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-password a:hover {
            color: #16A34A;
            text-decoration: underline;
        }

        .btn-login {
            width: 100%;
            padding: 16px;
            background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(34, 197, 94, 0.25);
        }

        .btn-login:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 16px rgba(34, 197, 94, 0.35);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .divider {
            text-align: center;
            margin: 30px 0 25px;
            position: relative;
            color: #9CA3AF;
            font-size: 14px;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            background: #E5E7EB;
        }

        .divider span {
            background: white;
            padding: 0 16px;
            font-weight: 500;
        }

        .social-buttons {
            display: flex;
            gap: 12px;
        }

        .btn-social {
            flex: 1;
            padding: 14px 12px;
            border: 2px solid;
            border-radius: 12px;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
            font-weight: 500;
            font-size: 14px;
        }

        .btn-facebook {
            color: #1877F2;
            border-color: #E3F2FD;
        }

        .btn-facebook:hover {
            background: #1877F2;
            color: white;
            border-color: #1877F2;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(24, 119, 242, 0.25);
        }

        .btn-google {
            color: #DC4E41;
            border-color: #FFEBEE;
        }

        .btn-google:hover {
            background: #DC4E41;
            color: white;
            border-color: #DC4E41;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(220, 78, 65, 0.25);
        }

        .text-danger {
            color: #EF4444;
            font-size: 13px;
            margin-top: 8px;
            font-weight: 500;
        }

        .validation-summary-errors {
            background: #FEF2F2;
            border: 1px solid #FECACA;
            color: #B91C1C;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        /* Ẩn validation summary khi trống hoặc valid */
        .validation-summary-errors:empty,
        .validation-summary-errors ul:empty,
        .validation-summary-valid {
            display: none !important;
        }

        /* Ẩn khi chỉ có li rỗng hoặc li với display:none */
        .validation-summary-errors ul li[style*="display:none"],
        .validation-summary-errors ul li:empty {
            display: none !important;
        }

        /* Ẩn toàn bộ validation nếu tất cả li đều ẩn */
        .validation-summary-errors ul:has(li[style*="display:none"]:only-child) {
            display: none !important;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }

        .validation-summary-errors li {
            margin: 0;
            padding: 0;
        }

        @@media (max-width: 480px) {
            .login-container {
                padding: 30px 25px;
                margin: 10px;
            }
            
            .social-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <button type="button" class="close-btn" onclick="window.history.back()" title="Đóng">
            <i class="fas fa-times"></i>
        </button>

        <div class="logo-section">
            <div class="logo-wrapper">
                <div class="fpt-logo">FPT</div>
                <span class="education-text">Education</span>
            </div>
            <div class="university-name">FPT UNIVERSITY</div>
        </div>

        <h2 class="login-title">Đăng nhập vào hệ thống</h2>

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="validation-summary-errors text-danger"></div>
            
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email/Số điện thoại của bạn" autocomplete="email" value="admin@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="password-field">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu đăng nhập của bạn" id="passwordField" autocomplete="current-password" value="TrungHieu@2000"/>
                    <button type="button" class="password-toggle" onclick="togglePassword()" title="Hiển thị/Ẩn mật khẩu">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="forgot-password">
                <a href="#" onclick="showForgotPasswordAlert(); return false;">Quên mật khẩu</a>
            </div>

            <button type="submit" class="btn-login">Đăng nhập</button>
        </form>

        <div class="divider">
            <span>Hoặc đăng nhập với</span>
        </div>

        <div class="social-buttons">
            <a href="#" class="btn-social btn-facebook" onclick="showSocialLoginAlert('Facebook'); return false;">
                <i class="fab fa-facebook-f"></i>
                Facebook
            </a>
            <a href="#" class="btn-social btn-google" onclick="showSocialLoginAlert('Google'); return false;">
                <i class="fab fa-google"></i>
                Google
            </a>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('passwordField');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        function showForgotPasswordAlert() {
            alert('Chức năng quên mật khẩu sẽ được cập nhật trong phiên bản tới.');
        }

        function showSocialLoginAlert(provider) {
            alert(`Chức năng đăng nhập ${provider} sẽ được cập nhật trong phiên bản tới.`);
        }

        // Auto-hide validation messages và ẩn validation summary khi trống
        document.addEventListener('DOMContentLoaded', function() {
            // Ẩn validation summary nếu không có lỗi thực sự
            const validationSummary = document.querySelector('.validation-summary-errors');
            if (validationSummary) {
                // Kiểm tra nếu có class validation-summary-valid
                if (validationSummary.classList.contains('validation-summary-valid')) {
                    validationSummary.style.display = 'none';
                    return;
                }

                // Kiểm tra nếu chỉ có li rỗng hoặc li với display:none
                const listItems = validationSummary.querySelectorAll('ul li');
                let hasVisibleErrors = false;
                
                listItems.forEach(function(li) {
                    const text = li.textContent.trim();
                    const style = li.getAttribute('style') || '';
                    if (text && !style.includes('display:none') && !style.includes('display: none')) {
                        hasVisibleErrors = true;
                    }
                });

                if (!hasVisibleErrors) {
                    validationSummary.style.display = 'none';
                } else {
                    validationSummary.style.display = 'block';
                }
            }

            const validationErrors = document.querySelectorAll('.text-danger, .validation-summary-errors');
            if (validationErrors.length > 0) {
                setTimeout(function() {
                    validationErrors.forEach(function(error) {
                        if (error.textContent.trim() && error.style.display !== 'none') { // Chỉ làm mờ nếu có nội dung và đang hiển thị
                            error.style.opacity = '0.6';
                            error.style.transition = 'opacity 0.5s ease';
                        }
                    });
                }, 8000);
            }

            // Add focus effects
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });
            });
        });

        // Handle form submission with loading state
        document.querySelector('form').addEventListener('submit', function() {
            const submitBtn = document.querySelector('.btn-login');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';
            submitBtn.disabled = true;
        });
    </script>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
