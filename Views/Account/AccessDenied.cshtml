@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body p-5">
                    <i class="fas fa-lock text-warning" style="font-size: 4rem; margin-bottom: 1rem;"></i>
                    <h2 class="text-danger">Truy cập bị từ chối</h2>
                    <p class="text-muted mb-4">Bạn không có quyền truy cập vào trang này.</p>
                    
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-2"></i>Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
